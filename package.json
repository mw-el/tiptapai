{
  "name": "tiptapai",
  "version": "0.1.0",
  "description": "Minimalistischer Desktop Markdown-Editor mit WYSIWYG (TipTap)",
  "main": "main.js",
  "scripts": {
    "build": "esbuild renderer/app.js --bundle --outfile=renderer/app.bundle.js --format=iife",
    "watch": "esbuild renderer/app.js --bundle --outfile=renderer/app.bundle.js --format=iife --watch",
    "start": "npm run build && env -u ELECTRON_RUN_AS_NODE electron .",
    "start:desktop": "npm run build && env -u ELECTRON_RUN_AS_NODE electron . --no-sandbox",
    "dev": "npm run build && env -u ELECTRON_RUN_AS_NODE electron . --inspect=5858"
  },
  "keywords": [
    "markdown",
    "editor",
    "tiptap",
    "wysiwyg",
    "electron"
  ],
  "author": "Matthias",
  "license": "MIT",
  "dependencies": {
    "@tiptap/core": "^3.7.2",
    "@tiptap/extension-table": "^3.7.2",
    "@tiptap/extension-table-cell": "^3.7.2",
    "@tiptap/extension-table-header": "^3.7.2",
    "@tiptap/extension-table-row": "^3.7.2",
    "@tiptap/markdown": "^3.7.2",
    "@tiptap/starter-kit": "^3.7.2",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "electron": "^38.3.0",
    "js-yaml": "^4.1.0",
    "node-pty-prebuilt-multiarch": "^0.10.1-pre.5"
  },
  "devDependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.25.11"
  }
}
